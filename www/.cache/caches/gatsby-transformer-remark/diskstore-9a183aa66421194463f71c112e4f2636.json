dent":[]}}],"position":{"start":{"line":50,"column":1,"offset":4090},"end":{"line":50,"column":267,"offset":4356},"indent":[]}},{"type":"html","lang":"jsx","value":"<div class=\"gatsby-highlight\" data-language=\"jsx\"><pre class=\"language-jsx\"><code class=\"language-jsx\"><span class=\"token comment\">// Your link</span>\n<span class=\"token tag\"><span class=\"token tag\"><span class=\"token punctuation\">&lt;</span>TransitionLink</span> <span class=\"token attr-name\">to</span><span class=\"token attr-value\"><span class=\"token punctuation\">=</span><span class=\"token punctuation\">\"</span>page-2<span class=\"token punctuation\">\"</span></span> <span class=\"token attr-name\">exit</span><span class=\"token script language-javascript\"><span class=\"token script-punctuation punctuation\">=</span><span class=\"token punctuation\">{</span><span class=\"token punctuation\">{</span> length<span class=\"token punctuation\">:</span> <span class=\"token number\">0.5</span> <span class=\"token punctuation\">}</span><span class=\"token punctuation\">}</span></span><span class=\"token punctuation\">></span></span><span class=\"token plain-text\">\n  Go to page 2\n</span><span class=\"token tag\"><span class=\"token tag\"><span class=\"token punctuation\">&lt;/</span>TransitionLink</span><span class=\"token punctuation\">></span></span></code></pre></div>","position":{"start":{"line":52,"column":1,"offset":4358},"end":{"line":57,"column":4,"offset":4466},"indent":[1,1,1,1,1]}},{"type":"html","lang":"jsx","value":"<div class=\"gatsby-highlight\" data-language=\"jsx\"><pre class=\"language-jsx\"><code class=\"language-jsx\"><span class=\"token comment\">// Your pose</span>\n<span class=\"token keyword\">export</span> <span class=\"token keyword\">const</span> Fade <span class=\"token operator\">=</span> posed<span class=\"token punctuation\">.</span><span class=\"token function\">div</span><span class=\"token punctuation\">(</span><span class=\"token punctuation\">{</spa